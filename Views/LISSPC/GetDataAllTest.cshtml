    // ✅ Manual Trendline Functions
        function applyManualTrend() {
            if (!window.chartMainRef) return;

            const lower = document.getElementById('manualLower').value;
            const upper = document.getElementById('manualUpper').value;

            const manualLines = [];
            if (lower) manualLines.push({
                startvalue: lower,
                displayvalue: "Manual Lower " + lower,
                linethickness: "2",
                color: "0075c2", // Blue
                dashed: "1",
                valueonright: "1"
            });
            if (upper) manualLines.push({
                startvalue: upper,
                displayvalue: "Manual Upper " + upper,
                linethickness: "2",
                color: "0075c2", // Blue
                dashed: "1",
                valueonright: "1"
            });

            if (manualLines.length === 0) return;

            // Get current chart JSON
            const data = window.chartMainRef.getJSONData();

            // ✅ Ensure trendlines[0] exists
            if (!data.trendlines || data.trendlines.length === 0) {
                data.trendlines = [{ line: [] }];
            } else if (!data.trendlines[0].line) {
                data.trendlines[0].line = [];
            }

            // Merge manual lines into existing trendlines[0].line
            data.trendlines[0].line = data.trendlines[0].line.concat(manualLines);

            window.chartMainRef.setJSONData(data);
        }


        function removeAllTrendlines() {
            if (!window.chartMainRef) return;

            const data = window.chartMainRef.getJSONData();

            // Remove all trendlines
            data.trendlines = [];

            window.chartMainRef.setJSONData(data);

            // Clear manual input boxes
            document.getElementById('manualLower').value = "";
            document.getElementById('manualUpper').value = "";
        }


    function resetTrend() {
        if (!window.chartMainRef) return;

        const data = window.chartMainRef.getJSONData();
        data.trendlines = [{
            line: [
                { startvalue: "@ViewBag.LowerLim", displayvalue: "Lower @ViewBag.LowerLim", linethickness: "2", color: "FF0000", dashed: "1", valueonright: "1" },
                { startvalue: "@ViewBag.UpperLim", displayvalue: "Upper @ViewBag.UpperLim", linethickness: "2", color: "FF0000", dashed: "1", valueonright: "1" }
            ]
        }];
        window.chartMainRef.setJSONData(data);

        document.getElementById('manualLower').value = "";
        document.getElementById('manualUpper').value = "";
        }


        // ========== Searchable Dropdown Logic ==========
        (function () {
            // Build options array from the hidden select
            const hiddenSelect = document.getElementById('dropDownSHidden');
            const searchInput = document.getElementById('partSearch');
            const listDiv = document.getElementById('dropdownList');

            // Collect all options
            const allOptions = Array.from(hiddenSelect.options).map(opt => ({
                value: opt.value,
                text: opt.text.trim(),
                style: opt.getAttribute('style') || '',
                cls: opt.getAttribute('style') && opt.getAttribute('style').includes('fff3cd') ? 'highlight-bom'
                    : opt.getAttribute('style') && opt.getAttribute('style').includes('d4edda') ? 'highlight-map'
                        : ''
            }));

            // Set input placeholder to current selected text
            const selectedOpt = hiddenSelect.options[0];
            if (selectedOpt) searchInput.placeholder = selectedOpt.text.trim();

            function renderList(filter) {
                listDiv.innerHTML = '';
                const lower = filter.toLowerCase();
                const filtered = allOptions.filter(o =>
                    !filter || o.text.toLowerCase().includes(lower) || o.value.toLowerCase().includes(lower)
                );

                if (filtered.length === 0) {
                    listDiv.innerHTML = '<div class="no-results">No results found</div>';
                    return;
                }

                filtered.forEach(opt => {
                    const div = document.createElement('div');
                    div.className = 'dropdown-item-custom ' + opt.cls;
                    if (opt.value === hiddenSelect.value) div.classList.add('selected');
                    div.textContent = opt.text;
                    div.title = opt.text;
                    div.addEventListener('mousedown', function (e) {
                        e.preventDefault(); // prevent blur before click
                        selectOption(opt);
                    });
                    listDiv.appendChild(div);
                });
            }

            function selectOption(opt) {
                // Update hidden select value
                hiddenSelect.value = opt.value;
                // If no match, add as first option
                if (hiddenSelect.value !== opt.value) {
                    const newOpt = new Option(opt.text, opt.value, true, true);
                    hiddenSelect.prepend(newOpt);
                    hiddenSelect.value = opt.value;
                }
                searchInput.value = opt.text;
                listDiv.style.display = 'none';
            }

            window.showDropdownList = function () {
                renderList(searchInput.value);
                listDiv.style.display = 'block';
            };

            window.filterDropdown = function (val) {
                renderList(val);
                listDiv.style.display = 'block';
            };

            // Close dropdown when clicking outside
            document.addEventListener('click', function (e) {
                if (!document.getElementById('searchableDropdown').contains(e.target)) {
                    listDiv.style.display = 'none';
                }
            });

            // Allow keyboard navigation
            searchInput.addEventListener('keydown', function (e) {
                const items = listDiv.querySelectorAll('.dropdown-item-custom');
                const current = listDiv.querySelector('.selected');
                let idx = Array.from(items).indexOf(current);

                if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    idx = Math.min(idx + 1, items.length - 1);
                } else if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    idx = Math.max(idx - 1, 0);
                } else if (e.key === 'Enter') {
                    e.preventDefault();
                    if (current) current.dispatchEvent(new Event('mousedown'));
                    return;
                } else if (e.key === 'Escape') {
                    listDiv.style.display = 'none';
                    return;
                }

                items.forEach(i => i.classList.remove('selected'));
                if (items[idx]) {
                    items[idx].classList.add('selected');
                    items[idx].scrollIntoView({ block: 'nearest' });
                }
            });
        })();
    </script>

